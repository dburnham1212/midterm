<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Public Quizzes</title>

  <!-- Include global styles-->
  <%- include('partials/_global_styling') %>

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>
<body>
  <%- include('partials/_header') %>
  <!-- middle -->
  <main>
    <h1 class="text-centered">Public Quizzes</h1>
    <span class="list-item">
      <p class="list-item-text">Quiz Name</p>
      <p class="list-item-text">Quiz Author</p>
      <p class="list-item-text">Quiz Url</p>
      <p class="list-item-text">Rating</p>
    </span>
    <% for (const quiz of public_quizzes) { %>
    <span class="list-item">
      <p class="list-item-text"><%= quiz.title %></p>
      <p class="list-item-text"><%= users[quiz.user_id].email %></p>
      <p class="list-item-text"><a href="#"><%= quiz.url %></a></p>
      <p class="list-item-text"><%= quiz.rating %></p>
    </span>
    <% } %>
  </main>
  <!-- footer -->
  <div>

  </div>
</body>
</html>
